# Server Configuration
PORT=3003
NODE_ENV=development

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=120000

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=15m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/smartaihub

# Credit Configuration
CREDIT_COST_PER_TOKEN=0.0001
MIN_CREDITS_REQUIRED=1

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
CREDIT_SERVICE_URL=http://localhost:3002

# Model Configuration
DEFAULT_OPENAI_MODEL=gpt-3.5-turbo
DEFAULT_CLAUDE_MODEL=claude-3-haiku

# Request Limits
MAX_TOKENS_REQUEST=4096
MAX_MESSAGES_IN_CONTEXT=20
MAX_TEMPERATURE=2.0
MIN_TEMPERATURE=0.0