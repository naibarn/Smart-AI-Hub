{
  "slaTiers": {
    "low": {
      "name": "Low",
      "thresholdMs": 5000,
      "percentile": "p95",
      "endpoints": ["/*"],
      "services": ["*"]
    },
    "medium": {
      "name": "Medium",
      "thresholdMs": 2000,
      "percentile": "p95",
      "endpoints": ["/api/v1/*"],
      "services": ["auth-service", "core-service"]
    },
    "high": {
      "name": "High",
      "thresholdMs": 1000,
      "percentile": "p95",
      "endpoints": ["/api/v1/auth/*", "/health", "/metrics"],
      "services": ["auth-service"]
    }
  },
  "responseTimeHeader": {
    "enabled": true,
    "headerName": "X-Response-Time",
    "precision": 2,
    "unit": "ms"
  }
}
